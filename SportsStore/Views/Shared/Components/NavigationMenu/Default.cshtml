@model IEnumerable<string>

<a asp-controller="Home" asp-action="Index" asp-route-category="" 
    class="btn btn-block btn-outline-secondary">Home</a>

@foreach (var category in Model)
{
    <a asp-controller="Home" asp-action="Index" asp-route-category="@category" 
        asp-route-productPage="1" 
        class="btn btn-block @(category == ViewBag.SelectedCategory ? "btn-primary" : "btn-outline-secondary")">@category</a>
}
